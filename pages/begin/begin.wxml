<!--pages/begin/begin.wxml-->
<view class="content">

  <!-- 轮播图 -->
    <swiper class="home-swiper" indicator-dots="true" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for-items="{{lunboData}}">
      <swiper-item>
        <image src="{{item.imgurl}}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>
  <!-- <drl-swiper images="{{lunboData}}"></drl-swiper> -->

  <!-- 分割线 -->
  <form bindreset="formReset" bindsubmit="formSubmit">

    <view class="containere" style="height: auto;">
      <van-divider contentPosition="center">欢迎!希望各位妈咪欧气每一天~</van-divider>
    </view>

    <view class="container">

      <view class="goal">
        目标：<input class="searchStyle" name="usergoal" placeholder="000000" type="number" bindinput="getUsergoal"/>
      </view>

      <view class="now">
        目前钻石：<input class="searchStyle" name="usernow" placeholder="000000" type="number" adjust-position="true"
        bindinput="getUsernow"/>
      </view>

      <picker name="rq" mode="date" value="{{date}}" bindchange="changeDate">
        <view class="picker">
         <view class="btn_containere">日期：{{date}} </view>    
        </view> 
      </picker>

       <view class="today">
          本日挖钻：<input class="searchStyle" name="usertoday" placeholder="000000" type="number" adjust-position="true"
          bindinput="getUsertoday"/>
          </view>

      <view class="btn_container">
        <button type="default" size="default" formType="submit">保存</button>
      </view>

    </view>

  </form>
</view>